{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@dashboard/*": ["app/layout/dashboard/*"],
      "@dpr/*": ["app/layout/reports/dpr/*"],
      "@env/*": ["environments/*"],
      "@longterm/*": ["app/layout/reports/longterm/*"],
      "@reports/*": ["app/layout/reports/*"]
    }
  }
}

